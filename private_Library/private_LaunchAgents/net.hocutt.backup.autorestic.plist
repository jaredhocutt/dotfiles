<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
        <dict>
                <key>Label</key>
                <string>net.hocutt.backup.autorestic</string>
                <key>ProgramArguments</key>
                <array>
                        <string>/opt/homebrew/bin/autorestic</string>
			<string>--restic-bin</string>
			<string>/opt/homebrew/bin/restic</string>
                        <string>backup</string>
                        <string>-av</string>
                </array>
                <key>WorkingDirectory</key>
                <string>/Users/jared</string>
                <key>StandardOutPath</key>
                <string>/Users/jared/Library/Logs/autorestic.log</string>
                <key>StandardErrorPath</key>
                <string>/Users/jared/Library/Logs/autorestic.log</string>
		<key>StartCalendarInterval</key>
		<dict>
			<key>Hour</key>
			<integer>3</integer>
			<key>Minute</key>
			<integer>0</integer>
		</dict>
        </dict>
</plist>
